  "scripts": {
    "dev": "npm-run-all -s clean -p build:watch serve",
    "clean": "rm -rf public",
    "serve": "pm2 start pm2-local.json --no-daemon",
    "build:watch": "npm-run-all -p build:client:watch build:server:watch",
    "build:client": "webpack-cli --config webpack.config.js",
